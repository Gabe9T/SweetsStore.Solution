@model SweetStore.Models.Flavor

<div class="content">
    <h2>Add a Treat</h2>

    <h4>Add a Treat to: @Model.Name</h4>

    @using (Html.BeginForm("AddTreat", "Flavors", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.FlavorId)

        <div class="form-group">
            @Html.Label("Select a Treat")
            @Html.DropDownList("TreatId", new SelectList(ViewBag.Treats, "TreatId", "Name"))
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    }

    <p>@Html.ActionLink("Back to Flavors", "Index", "Flavors")</p>

    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-blue" })
</div>
